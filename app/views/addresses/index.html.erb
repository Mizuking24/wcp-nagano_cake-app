<div class ="container">
  <div class="col-md-8">
    <h2>配送先登録/一覧</h2>
    <%= form_with model: @address, url: addresses_path, local: true do |f| %>
      <table class="table">
        <tr>
          <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
          <td><%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :"住所" %></td>
          <td><%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :"宛名" %></td>
          <td><%= f.text_field :name, autofocus: true, placeholder: "令和太郎", class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </table>
    <% end %>

    <table class="table">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address), class: "btn btn-primary" %>
            <%= link_to "削除する",  address_path(address), method: :delete, data: {confirm: "#{address.address}を削除してよろしいですか？"}, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>