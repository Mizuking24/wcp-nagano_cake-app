<div class="container">
  <div class="col-md-8 order-md-1">
    <h2 class="my_page_tag">マイページ</h2>
    <div class="row customer_show_button">
        <h4>登録情報</h4>
        <span class="link_button"><%= link_to "編集する", edit_customer_path, class: "btn-sm btn-success" %></span>
    </div>
    <table class="table">
      <tr>
        <td>氏名</td>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <td>カナ</td>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </table>
    <div class="row customer_show_button">
      <h4>配送先</h4>
      <span class="link_button"><%= link_to "一覧を見る",  addresses_path, class: "btn-sm btn-primary" %></span>
    </div>
    <div class="row customer_show_button">
      <h4>注文履歴</h4>
      <span class="link_button"><%= link_to "一覧を見る", orders_path, class: "btn-sm btn-primary" %></span>
    </div>
  </div>
</div>