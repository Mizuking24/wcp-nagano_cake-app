<div class="col-md-8 order-md-1">
  <h3 class="mb-3">注文情報入力</h3>
  <%= form_with model: @order, url: orders_info_path, local: true, class: "needs-validation" do |f| %>
    <h5 class="mb-3">支払方法</h5>
    <div class="d-block my-3">
      <div class="custom-control custom-radio">
        <%= f.radio_button :payment_method, 0, checked: "checked" %>
        <%= f.label :"クレジットカード" %></br>
      </div>
      <div class="custom-control custom-radio">
       <%= f.radio_button :payment_method, 1 %>
       <%= f.label :"銀行振込" %></br>
      </div>
    </div>

    <h5 class="mb-3">お届け先</h5>
    <div class="col-md-5 mb-3">
      <%= f.radio_button :address_option, 0, checked: "checked" %>
      <%= f.label :"ご自身の住所"  %></br>
      <p>
      〒<%= @customer.postal_code %> <%= @customer.address %></br>
      <%= @customer.last_name %><%= @customer.first_name %></br>
      </p>
    </div>

    <div class="col-md-5 mb-3">
    <%= f.radio_button :address_option, 1 %>
    <%= f.label :"登録済住所から選択" %></br>
    <%= f.collection_select :address_id, current_customer.addresses, :id, :address, :include_blank => "選択してください", class: "custom-select d-block w-100" %></br>
    </div>

    <div class="col-md-5 mb-3">
    <%= f.radio_button :address_option, 2 %>
    <%= f.label :"新しいお届け先" %></br>
      <div class="mb-3">
        <%= f.label :"宛名" %>
        <%= f.text_field :name,  autofocus: true, placeholder: "令和太郎", class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :"郵便番号（ハイフンなし）" %>
        <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", class: "form-control" %>
      </div>
      <div class= "mb-3">
        <%= f.label :"住所" %>
        <%= f.text_field :address,  autofocus: true, placeholder: "東京都渋谷区神園町０−０", class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6 mb-3">
    <%= f.submit "確認画面へ進む", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  <% end %>
</div>