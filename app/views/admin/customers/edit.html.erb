<div class="container">
  <div class="col-md-5 admin-customer-edit">
    <h3 class="customer_headding"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
    <%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
      <table class="table">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th><%= f.label :"氏名" %></th>
          <td>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
          </td>
        </tr>
        <tr>
          <th><%= f.label :"フリガナ" %></th>
          <td>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control" %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control" %>
          </td>
        </tr>
        <tr>
          <th><%= f.label :"郵便番号" %></th>
          <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"住所" %></th>
          <td><%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"電話番号" %></th>
          <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"メールアドレス" %></th>
          <td><%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効" %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :id_active, "退会" %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>