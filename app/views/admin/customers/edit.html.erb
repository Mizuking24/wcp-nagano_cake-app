<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
  <table>
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th><%= f.label :"氏名" %></th>
      <td>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :"フリガナ" %></th>
      <td>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :"郵便番号" %></th>
      <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
    </tr>
    <tr>
      <th><%= f.label :"住所" %></th>
      <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
    </tr>
    <tr>
      <th><%= f.label :"電話番号" %></th>
      <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
    </tr>
    <tr>
      <th><%= f.label :"メールアドレス" %></th>
      <td><%= f.text_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :id_active, "退会" %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit "編集内容を保存" %></td>
    </tr>
  </table>
<% end %>