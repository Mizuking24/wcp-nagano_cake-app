<div class="container">
  <div class="row item-show">
    <div class="col-md-5 item-image">
      <%= attachment_image_tag @item, :image, :fill, 300, 200, fallback: "no_image.jpg" %>
    </div>
    <div class="cart-field col-md-5">
      <table class="table">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= @item.price %></td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == true %>
              <p class="text-success">販売中</p>
            <% else %>
              <p class="text-black-50">販売停止中</p>
            <% end %>
          </td>
        </tr>
        <tr>
          <th><%= link_to "編集する",  edit_admin_item_path(@item), class: "btn btn-primary" %></th>
          <td></td>
        </tr>
      </table>
    </div>
  </div>
</div>