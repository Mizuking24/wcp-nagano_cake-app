<div class="container">
  <div class="col-md-8">
    <h2>商品編集</h2>
    <%= form_with model: @item, url: admin_item_path(@item.id), local:true do |f| %>
    <table>
      <tr>
        <th><%= f.label :"商品画像" %></th>
        <td><%= f.attachment_field :image, class: "form-control-file product_item" %></td>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label :"商品名" %></th>
        <td><%= f.text_field :name, autofocus: true, class: "form-control product_item" %></td>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label :"商品説明" %></th>
        <td><%= f.text_area :introduction, autofocus: true, class: "form-control product_item" %></td>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label :"ジャンル" %></th>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control product_item" %></td>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label :"税抜価格" %></th>
        <td><%= f.text_field :price, autofocus: true, class: "form-control product_item" %></td>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label :"販売ステータス" %></th>
        <td><%= f.select :is_active, options_for_select([{value: true, name: "販売中"}, {value: false, name: "販売停止中"}].map{|c|[c[:name], c[:value]]}), class: "form-control product_item" %></td>
        <td></td>
      </tr>
    </table>
    <%= f.submit "変更を保存する", class: "product_item btn btn-success" %>
    <% end %>
  </div>
</div>
